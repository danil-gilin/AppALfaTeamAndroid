<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/hero_scene2">

    <TextView
        android:id="@+id/txt_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bevan"
        android:text="Success"
        android:textColor="#A5F60D"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/hero_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hero_img" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"

        android:gravity="center"
        android:text="Descr i ptio nфв ыафы вафыв афывафв ыаф выафыв афыва фываф ываф выав"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txt_choose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hero_img"
        app:layout_constraintTop_toTopOf="@+id/hero_img" />

    <ImageView
        android:id="@+id/hero_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="hero name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/hero_img"
        app:layout_constraintStart_toStartOf="@+id/hero_img"
        app:layout_constraintTop_toBottomOf="@+id/hero_img" />
</androidx.constraintlayout.motion.widget.MotionLayout>