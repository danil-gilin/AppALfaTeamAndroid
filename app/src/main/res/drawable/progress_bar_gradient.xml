<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient

                android:angle="270"
                android:centerColor="#7E6128"
                android:centerY="0.75"
                android:endColor="@color/background_brown_item"
                android:startColor="@color/background_brown_item" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="horizontal">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:endColor="@color/progressColorPlus"
                    android:startColor="#3E5905" />
            </shape>
        </clip>
    </item>
</layer-list>

